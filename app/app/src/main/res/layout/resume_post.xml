<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_layout"
                android:orientation="vertical">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="회원정보" />
                        <TextView
                            android:id="@+id/resume_name"
                            android:text="(회원이름)"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </TableRow>

                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="경력" />
                        <EditText
                            android:id="@+id/resume_career"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="경력입력" />
                        <Button
                            android:id="@+id/resume_career_btn"
                            android:text="추가"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ListView
                            android:id="@+id/resume_listView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </ListView>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="상호평가 총 평점" />
                        <TextView
                            android:id="@+id/resume_review_result"
                            android:text="(평점)"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="소개" />
                        <EditText
                            android:id="@+id/resume_easy_login"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content">
                        </EditText>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="이미지첨부" />
                        <LinearLayout>
                            <Button
                                android:id="@+id/selectImageButton"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="7dp"
                                android:text="사진첨부"
                                android:onClick="onSelectImageClick" />
                            <ImageView
                                android:id="@+id/resume_image_imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/selectImageButton"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:src="@android:drawable/ic_menu_gallery" />
                        </LinearLayout>
                    </TableRow>

                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/resume_send"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/round_btn"
                    android:gravity="center"
                    android:text="저장하기"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>