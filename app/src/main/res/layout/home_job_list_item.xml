<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_background"
    android:elevation="@dimen/cardview_default_radius"
    android:layout_marginBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="4dp"
    android:paddingBottom="7dp"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp">
                    <TextView
                        android:id="@+id/home_list_address_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#325904"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:text="(주소1)"/>
                    <TextView
                        android:id="@+id/home_list_address_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#325904"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:text="(주소2)"/>
                    <LinearLayout
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/rounded_background_gray3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/home_list_item_crop_form"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:layout_marginRight="3dp"
                            android:text="(품목)"/>

                        <TextView
                            android:id="@+id/home_list_item_crop_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="(작물)"
                            android:textSize="11dp" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/home_list_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:text="(공고제목)"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/home_list_work_period_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/black"
                        android:text="작업기간:"/>
                    <TextView
                        android:id="@+id/home_list_work_period_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:text="(시작)"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="10dp"
                        android:text="~"/>
                    <TextView
                        android:id="@+id/home_list_work_period_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:text="(끝)"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
