<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_background"
    android:elevation="@dimen/cardview_default_radius"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/applicant_status_address_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#325904"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:text="(주소1)"/>
                    <TextView
                        android:id="@+id/applicant_status_address_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#325904"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:text="(주소2)"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/applicant_status_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="(공고제목)"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_gravity="right"
                android:paddingLeft="15dp"
                android:background="@drawable/rounded_background_btn"
                android:layout_width="65dp"
                android:layout_height="42dp">
                <TextView
                    android:id="@+id/applicant_status_approval"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textSize="13dp"
                    android:text="합격"/>
            </LinearLayout>


        </LinearLayout>


</LinearLayout>
