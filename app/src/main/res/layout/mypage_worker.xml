<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="620dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/toolbar_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/toolbar"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/rounded_background_green2"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/myPage_logout_btn"
                        android:background="@drawable/rounded_background_btn"
                        android:layout_width="80dp"
                        android:layout_height="38dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="185dp"
                        android:text="로그아웃" />

                    <Button
                        android:background="@drawable/rounded_background_btn"
                        android:id="@+id/myPage_modify_btn"
                        android:layout_width="80dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_height="38dp"
                        android:text="정보수정" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20dp"
                    android:paddingLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/myPage_imageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_profile" />

                    <TextView
                        android:id="@+id/myPage_name_textView"
                        android:layout_gravity="center"
                        android:text="(회원이름)"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/myPage_rating_textView"
                        android:textColor="@color/black"
                        android:text="(등급)"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/myPage_rating_imageView"
                        android:src="@drawable/level_2_img"
                        android:layout_gravity="center"
                        android:layout_width="38dp"
                        android:layout_height="38dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="다음단계까지 평균 4점 이상의 평가 "
                        android:textColor="@color/black"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/myPage_remain_TextView"
                        android:textColor="#325904"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="(갯수)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="개 받기"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="나의 상호평가 총점: "
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="(총점)"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:id="@+id/my_total_reviewAvg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/myPage_resume_btn"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_background_btn2"
                    android:text="이력서 관리"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/myPage_apply_status_btn"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_background_btn2"
                    android:text="지원현황"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/myPage_clip_btn"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_background_btn2"
                    android:text="스크랩 목록"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/myPage_review_btn"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_background_btn2"
                    android:text="상호평가"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="bottom"
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:itemBackground="@android:color/white">
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>

</LinearLayout>