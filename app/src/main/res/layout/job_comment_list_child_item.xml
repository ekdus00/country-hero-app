<!--                        android:id="@+id/job_comment_editBtn"-->
<!--                        android:text="수정"-->
<!--                        android:layout_width="50dp"-->
<!--                        android:layout_height="45dp">-->
<!--                    </Button>-->
<!--                    <Button-->
<!--                        android:id="@+id/job_comment_deleteBtn"-->
<!--                        android:text="삭제"-->
<!--                        android:layout_width="50dp"-->
<!--                        android:layout_height="45dp">-->
<!--                    </Button>-->
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
