<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_layout"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/resume_check_image"
                    android:src="@drawable/mypage"
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="회원정보" />
                        <TextView
                            android:id="@+id/resume_name"
                            android:text="(이름)"
                            android:layout_gravity="center"
                            android:layout_width="250dp"
                            android:layout_height="match_parent">
                        </TextView>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="성별" />
                        <TextView
                            android:id="@+id/resume_gender"
                            android:text="(성별)"
                            android:layout_gravity="center"
                            android:layout_width="250dp"
                            android:layout_height="match_parent">
                        </TextView>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="경력" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/resume_career"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp" />
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="상호평가 총 평점" />
                        <TextView
                            android:id="@+id/resume_review"
                            android:text="(점수)"
                            android:layout_gravity="center"
                            android:layout_width="250dp"
                            android:layout_height="match_parent">
                        </TextView>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="130dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="소개" />
                        <TextView
                            android:id="@+id/resume_email"
                            android:text="(소개)"
                            android:layout_gravity="center"
                            android:layout_width="250dp"
                            android:layout_height="match_parent">
                        </TextView>
                    </TableRow>

                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/resume_approval"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_btn"
                    android:gravity="center"
                    android:text="승인"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/resume_defer"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/round_btn"
                    android:gravity="center"
                    android:text="보류"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>