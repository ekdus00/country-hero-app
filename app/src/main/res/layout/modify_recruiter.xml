<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_layout"
                android:orientation="vertical">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="이름" />
                        <EditText
                            android:id="@+id/modify_name"
                            android:layout_marginLeft="10dp"
                            android:layout_width="250dp"
                            android:layout_height="match_parent">
                        </EditText>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="성별" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RadioGroup
                                android:id="@+id/radioGroupModify"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RadioButton
                                    android:id="@+id/radio_woman"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:text="여자" />
                                <RadioButton
                                    android:text="남자"
                                    android:layout_weight="1"
                                    android:id="@+id/radio_man"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RadioGroup>
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="농가(사업자)명" />
                        <EditText
                            android:id="@+id/modify_recruiter_name"
                            android:layout_marginLeft="10dp"
                            android:layout_width="250dp"
                            android:layout_height="match_parent">
                        </EditText>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="출생연도" />
                        <EditText
                            android:id="@+id/modify_birth"
                            android:layout_marginLeft="10dp"
                            android:layout_width="250dp"
                            android:layout_height="match_parent">
                        </EditText>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="이메일" />
                        <EditText
                            android:id="@+id/modify_email"
                            android:layout_marginLeft="10dp"
                            android:layout_width="250dp"
                            android:layout_height="match_parent">
                        </EditText>
                    </TableRow>
                    <TableRow
                        android:background="@drawable/border_layout">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:background="#CCD9C8"
                            android:textColor="@color/black"
                            android:text="간편 로그인 정보" />
                        <TextView
                            android:id="@+id/modify_easy_login"
                            android:text="네이버"
                            android:layout_marginLeft="10dp"
                            android:layout_width="250dp"
                            android:layout_height="match_parent">
                        </TextView>
                    </TableRow>

                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/modify_send"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/round_btn"
                    android:gravity="center"
                    android:text="저장하기"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>