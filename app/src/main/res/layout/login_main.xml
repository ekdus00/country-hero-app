<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <include layout="@layout/toolbar_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="로그인"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textStyle="normal"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@drawable/border_gray3"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_width="340dp"
                android:layout_height="45dp">
                <EditText
                    android:hint="아이디"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/login_id_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/border_gray3"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="340dp"
                android:layout_height="45dp">
                <EditText
                    android:hint="비밀번호"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/login_pw_editText"
                    android:inputType="textPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/login_sendBtn"
                android:layout_marginTop="20dp"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="#464646"
                android:textColor="@color/white"
                android:text="로그인" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="wrap_content">
            <Button
                android:text="회원가입"
                android:id="@+id/login_joinBtn"
                android:background="@null"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/back2"
                android:layout_gravity="center"
                android:layout_width="13dp"
                android:layout_height="13dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:text="아이디찾기"
                android:id="@+id/login_id_findBtn"
                android:background="@null"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>
            <Button
                android:text="비밀번호 재설정"
                android:id="@+id/login_pw_resetBtn"
                android:background="@null"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<!--            <Button-->
<!--                android:text="네이버 간편 로그인"-->
<!--                android:id="@+id/login_simple_naver_btn"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->
<!--            <com.navercorp.nid.oauth.view.NidOAuthLoginButton-->
<!--                android:id="@+id/buttonOAuthLoginImg"-->
<!--                android:layout_width="200dp"-->
<!--                android:layout_height="100dp" />-->

            <Button
                android:background="@drawable/icon_naver"
                android:layout_marginTop="40dp"
                android:id="@+id/naver"
                android:layout_width="200dp"
                android:layout_height="50dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>